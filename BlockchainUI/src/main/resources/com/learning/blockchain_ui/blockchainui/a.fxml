<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="$CONTROLLER_NAME$">
   <children>
      <Label layoutX="50.0" layoutY="50.0" text="Decentralized Database">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="idField" layoutX="33.0" layoutY="89.0" promptText="ID" />
       <TextField fx:id="contentField" layoutX="33.0" layoutY="133.0" promptText="Content" />
       <Button layoutX="108.0" layoutY="175.0" onAction="#handleUpdateData" text="Update Data" />
       <Button layoutX="203.0" layoutY="175.0" onAction="#handleDeleteData" text="Delete Data" />
       <Button layoutX="33.0" layoutY="175.0" onAction="#handleGetData" text="Get Data" />

       <TextArea fx:id="outputArea" editable="false" layoutX="33.0" layoutY="209.0" />
   </children>
</AnchorPane>
